# WorkOS AuthKit Configuration
WORKOS_CLIENT_ID=client_...
WORKOS_API_KEY=sk_test_...
WORKOS_COOKIE_PASSWORD=<32+ character password>
NEXT_PUBLIC_WORKOS_REDIRECT_URI=http://localhost:3000/auth/callback

# Database (if using Turso)
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=your-token
# Optional: force migrations during non-Vercel builds
RUN_DB_MIGRATIONS=false
# Optional: set to true to always skip migration step during build/deploy
SKIP_DB_MIGRATIONS=false

# Cloudflare R2 Storage (for attachments)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=shipit

# Cloudflare document conversion service (for Office -> PDF previews)
# Point this to your Cloudflare Container endpoint.
CLOUDFLARE_DOC_CONVERTER_URL=
CLOUDFLARE_DOC_CONVERTER_API_TOKEN=
CLOUDFLARE_DOC_CONVERTER_TIMEOUT_MS=120000
CLOUDFLARE_DOC_CONVERTER_FILE_FIELD=file

SMITHERY_API_KEY=

# Inngest Configuration
INNGEST_EVENT_KEY=           # From Inngest dashboard (production only)
INNGEST_SIGNING_KEY=         # From Inngest dashboard (production only)

# AI Gateway
AI_GATEWAY_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Google Generative AI
GOOGLE_GENERATIVE_AI_API_KEY=

# EMAIL
RESEND_API_KEY=
APP_URL=http://localhost:3000
